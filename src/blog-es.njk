title: Blog
permalink: /es/blog/index.html
---

<div class="blog-index">
    <div class="container">
        <div class="blog-header">
            <h1>Blog de Borderless</h1>
            <p class="blog-description">Información sobre conectividad global, tecnología eSIM y estilo de vida nómada digital</p>
        </div>

        <div class="posts-grid">
            {%- for post in collections.posts_es -%}
            <article class="post-card">
                <div class="post-card-content">
                    <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
                    <time datetime="{{ post.date }}">{{ post.date | readableDateEs }}</time>
                    {% if post.data.excerpt %}
                    <p class="excerpt">{{ post.data.excerpt }}</p>
                    {% endif %}
                    <a href="{{ post.url }}" class="read-more">Leer más →</a>
                </div>
            </article>
            {%- endfor -%}
        </div>
    </div>
</div>
