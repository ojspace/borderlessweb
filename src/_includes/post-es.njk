---
layout: base-es.njk
---

<article class="blog-post">
    <div class="container">
        <div class="post-header">
            <h1>{{ title }}</h1>
            <div class="post-meta">
                <time datetime="{{ date }}">{{ date | readableDateEs }}</time>
                {% if author %}
                <span class="author">por {{ author }}</span>
                {% endif %}
            </div>
        </div>

        <div class="post-content">
            {{ content | safe }}
        </div>

        <div class="post-footer">
            <a href="/es/blog/" class="back-link">‚Üê Volver al Blog</a>
        </div>
    </div>
</article>
